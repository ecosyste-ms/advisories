<% @meta_title = "#{@ecosystem.humanize} Security Advisories" %>
<% @meta_description = "Browse and search security advisories for #{@ecosystem} packages. View CVE details, severity ratings, and affected versions." %>

<div class="container">
  <div class="mb-5">
    <div class="d-flex align-items-center mb-3">
      <% if @registry&.icon_url.present? %>
        <img src="<%= @registry.icon_url %>" alt="<%= @ecosystem %>" class="me-3" style="width: 64px; height: 64px; object-fit: contain;">
      <% end %>
      <div>
        <h2 class="h1 mb-0"><%= @ecosystem %></h2>
        <% if @registry %>
          <p class="text-muted mb-0">
            <%= link_to "#{number_with_delimiter Package.ecosystem(@ecosystem).count} packages", ecosystem_packages_path(@ecosystem) %>
            <% if @registry.url.present? %>
              Â· <a href="<%= @registry.url %>" target="_blank" rel="noopener"><%= @registry.name %></a>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="listing-controls p-3 mb-5 rounded">

    <div class="row">
      <div class="col-8">
        <p class="mb-0">
          <% if params[:severity].present? %>
            <strong><%= params[:severity].humanize %></strong>
          <% end %>
          Security Advisories
          <% if params[:package_name].present? %>
            for <strong><%= params[:package_name] %></strong>
          <% end %>
          <% if params[:repository_url].present? %>
            for <strong><%= params[:repository_url] %></strong>
          <% end %>
          in <strong><%= @ecosystem %></strong>
          <% if params.slice(:package_name, :repository_url, :severity).values.any?(&:present?) %>
            <%= link_to 'Clear Filters', ecosystem_path(@ecosystem), class: 'btn btn-link btn-clear p-0' %>
          <% end %>
        </p>
      </div>

          <div class="col-4  text-end">
            <%= render 'advisories/sort' %>
          </div>
        </div>
      </div>
      <%= render @advisories %>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
    <div class="col-lg-4 listing-filters">
      <h3 class="h4 mx-3">Filter by Severity</h3>
      <div class="list-group list-group-flush">
        <% @severities.each do |severity,count| %>
          <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= 'active' if params[:severity] == severity %>" href="<%= url_for(request.params.merge(severity: (params[:severity] == severity ? nil : severity), page: nil)) %>">
            <%= severity.humanize %>
            <span class="badge bg-primary rounded-pill"><%= number_with_delimiter count %></span>
          </a>
        <% end %>
      </div>

      <h3 class="h4 mt-5 mx-3">Filter by Package</h3>
      <div class="list-group list-group-flush">
        <% @packages.first(200).each do |package,count| %>
          <%= link_to ecosystem_package_path(@ecosystem, package['package_name']), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center #{'active' if params[:package_name] == package['package_name']}" do %>
            <%= package['package_name'] %>
            <span class="badge bg-primary rounded-pill"><%= number_with_delimiter count %></span>
          <% end %>
        <% end %>
      </div>

      <h3 class="h4 mt-5 mx-3">Filter by Repository</h3>
      <div class="list-group list-group-flush">
        <% @repository_urls.first(200).each do |repository_url,count| %>
          <% next if repository_url.blank? %>
          <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= 'active' if params[:repository_url] == repository_url %>" href="<%= url_for(repository_url: (params[:repository_url] == repository_url ? nil : repository_url), page: nil) %>">
            <%= repository_url %>
            <span class="badge bg-primary  rounded-pill"><%= number_with_delimiter count%></span>
          </a>
        <% end %>
      </div>

    </div>
  </div>
</div>
